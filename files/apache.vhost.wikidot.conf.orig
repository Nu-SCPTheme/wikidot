# Add this configuration to your Apache config: 
# * add this to your httpd.conf, virtual.d or any other place Apache can see it
# * make sure this entry is the FIRST one among your vhosts definitions
#   so that it is picked when any wiki from your domain is accessed.

<VirtualHost *:80>
        ServerAdmin %{WIKIDOT:SUPPORT_EMAIL}
        ServerName %{WIKIDOT:URL_HOST}
        DocumentRoot %{WIKIDOT:WIKIDOT_ROOT}/web

        LogLevel warn
        <Directory />
                AllowOverride all
                Order allow,deny
                Allow from all
        </Directory>

        <Directory  %{WIKIDOT:WIKIDOT_ROOT}/web/files--sites/>
                AllowOverride None
                AddType text/plain .html .htm .shtml .php .xhtml
                php_admin_flag engine off
        </Directory>

        <Directory  %{WIKIDOT:WIKIDOT_ROOT}/web/custom--domains/>
                AllowOverride None
                AddType text/plain .html .htm .shtml .php .xhtml
                php_admin_flag engine off
        </Directory>
</VirtualHost>

